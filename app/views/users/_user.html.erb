<li>
  <%= gravatar_for user, size: Settings.default.gravatar_size %>
  <%= link_to user.name, user %>
    <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to "delete", user, data: { "turbo-method": :delete,
                                          turbo_confirm: t("user.you_sure") } %>
  <% end %>
</li>
