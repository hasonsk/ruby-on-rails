<% provide :title, t("user.edit_user") %>
<% provide :button_text, t("user.save_changes") %>
<h1><%= t "user.update_your_profile" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form" %>
