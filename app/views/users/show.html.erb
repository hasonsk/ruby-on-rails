<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= gravatar_for(@user) %></h1>
      <h2><%= @user.name %></h2>
    </section>
  </aside>

  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3><%= t "micropost.microposts" %> (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%== pagy_bootstrap_nav @pagy %>
    <% end %>
  </div>
</div>
