<% provide :title, t("header.login") %>
<h1><%= t "header.login" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: login_path, scope: :session) do |f| %>
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %>
    <%= f.label :password %>
    <%= link_to t("password_reset._forgot_password_"), new_password_reset_path %>
    <%= f.password_field :password, class: "form-control" %>
    <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t "login.remember_me" %></span>
      <% end %>
    <%= f.submit t("header.login"), class: "btn btn-primary" %>
  <% end %>
  <p> <% t "login.new_users" %> <%= link_to t("signup"), signup_path %></p>
 </div>
</div>
